@model IEnumerable<MvcApplication1.Dominio.Prato>

<br>
<td>@Html.ActionLink("Novo Prato", "Cadastrar")</td>
<br>
<br>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeRestaurante)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeRestaurante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new {id=item.Id}) |
            @Html.ActionLink("Detalhes", "Detalhes", new {id=item.Id}) |
            @Html.ActionLink("Excluir", "Excluir", new {id=item.Id})
        </td>
    </tr>
}

</table>
